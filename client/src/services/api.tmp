const API_URL = "/api";

// TÃ¼m Ã¼rÃ¼nleri getir
export async function getProducts() {
  const res = await fetch(`${API_URL}/products`);
  if (!res.ok) throw new Error("Products fetch failed");
  return res.json();
}

// ID ile Ã¼rÃ¼n getir
export async function getProductById(id) {
  const res = await fetch(`${API_URL}/products/${id}`);
  if (!res.ok) throw new Error("Product fetch failed");
  return res.json();
}

// STOCK UPDATE --- DÃœZELTÄ°LMÄ°Å HAL
export async function updateStock(id, amount) {
  const res = await fetch(`${API_URL}/products/${id}/stock`, {
    method: "PUT",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ amount }),
  });

  if (!res.ok) {
    let data = {};
    try {
      data = await res.json();
    } catch (e) {}

    // backendten "Not enough stock" gelirse onu fÄ±rlat
    throw new Error(data.error || "Stock update failed");
  }

  return await res.json(); // { success: true }
}
